pipeline {
    agent any
    stages {
        stage('Verificando Docker'){
            steps {
                sh 'docker images'
            }
        }
        stage('Construir rsphp'){
            steps{
                sh 'docker-compose down'
                sh 'docker image rm rsphp'
                sh 'docker build --tag=rsphp .'
                sh 'docker images'
            }
        }
        stage('Construir servicio rsphp + mysql'){
            steps{
                sh '../docker-compose up -d'
            }
        }
    }
}